@model List<tbl_Category>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    function confirmDel() {
        return confirm('Are you sure?');
    }
</script>

<table class="table table-bordered table-striped">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Home", new { Id = item.Id }, htmlAttributes: new { @class= "btn btn-primary" })
                @*only implement below functionality if onClick return true*@
                @Html.ActionLink("Delete", "Delete", "Home", new { Id = item.Id }, htmlAttributes: new { @class= "btn btn-danger", onclick= "return confirmDel()"})
            </td>
        </tr>
    }
</table>



